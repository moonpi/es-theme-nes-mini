<theme>
    <formatVersion>3</formatVersion>
    <include>./../nesmini.xml</include>
	

	<view name="system">

		<image name="background" extra="true">
			<path>./system_art.png</path>
		</image>

		<image name="logo">
			<path>./logo.png</path>
        </image>
			
	</view>
	
	<feature supported="carousel">

		<view name="system">
			<image name="logo">
				<path>./carousel_logo.png</path>
			</image>
			
			<image name="carousel_bar" extra="true">
				<color>00ff70</color>
			</image>
		
		</view>

	</feature>

	<view name="basic, detailed, video">
	
		<image name="logo">
			<path>./logo.png</path>
			<pos>2 2</pos>
			<maxSize>0.1 0.1</maxSize>
			<origin>0 0.5</origin>
		</image>
	
		<rating name="md_rating">
			<filledPath>./../art/heart_filled_white.png</filledPath>
			<unfilledPath>./../art/heart_empty_white.png</unfilledPath>
			<color>00ff70</color>
		</rating>

		<text name="publisher_label, developer_label, genre_label, rating_label, played_label" extra="true">
			<color>00ff70</color>
		</text>	

		<text name="md_developer, md_publisher, md_genre, md_players, md_playcount">
			<color>00ff70</color>
		</text>		
		
		<datetime name="md_releasedate">
			<color>00ff70</color>
		</datetime>	

		<text name="players_label" extra="true">
			<color>00ff70</color>
		</text>		
		
		<text name="md_description">
		<color>00ff70</color>
		</text>
		
		<textlist name="gamelist">
			<selectorColor>00ff70</selectorColor>
			<selectedColor>000000</selectedColor>
			<primaryColor>19ac53</primaryColor>
			<secondaryColor>00ff70</secondaryColor>
		</textlist>
		
		<image name="background" extra="true">
			<path>./menu_background.png</path>
		</image>

		
		<image name="left_window_border" extra="true">
			<path>./window_border.png</path>
			<color>00ff70</color>
		</image>
		
		<image name="left_window_body" extra="true">
			<path>./window_body.png</path>
			<color>00ff70</color>
		</image>
		
		<image name="right_window_border" extra="true">
			<path>./window_border.png</path>
			<color>00ff70</color>
		</image>
		
		<image name="right_window_body" extra="true">
			<path>./window_body.png</path>
			<color>00ff70</color>
		</image>


		
		<image name="right_window_box" extra="true">
			<path>./window_box.png</path>
			<color>00ff70</color>
		</image>
		
		<image name="left_window_box" extra="true">
			<path>./window_box.png</path>		
			<color>00ff70</color>
		</image>		



		
		<image name="bar_1" extra="true">
			<path>./info_bar.png</path>
			<color>00ff70</color>
		</image>		
		
		<image name="bar_2" extra="true">
			<path>./info_bar.png</path>
			<color>00ff70</color>
		</image>		

		<image name="bar_3" extra="true">
			<path>./info_bar.png</path>
			<color>00ff70</color>
		</image>

		<image name="bar_4" extra="true">
			<path>./rating_bar.png</path>
			<color>00ff70</color>
		</image>	
		
		<image name="player_box" extra="true">
			<path>./player_box.png</path>
			<color>00ff70</color>		
		</image>	


		
		
	</view>
	
</theme>